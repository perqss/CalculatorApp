<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/not_as_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/not_as_black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="NewButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ButtonThemeOverlay</item>
        <item name="android:layout_weight">1</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="maxLines">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/black</item>
    </style>

    <style name="OperatorsStyle" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/OperatorThemeOverlay</item>
        <item name="android:layout_weight">1</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">50sp</item>
        <item name="maxLines">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/black</item>
    </style>

    <style name="RelLayoutColor">
        <item name="android:background">@color/not_as_black</item>
    </style>

    <style name="TextColour">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ButtonThemeOverlay</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="cornerRadius">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/black</item>
    </style>

    <style name="ic_backspace" type="drawable">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ButtonThemeOverlay">
        <item name="colorPrimary">@color/not_as_black</item>
    </style>

    <style name="OperatorThemeOverlay">
        <item name="colorPrimary">@color/blue</item>
    </style>
</resources>